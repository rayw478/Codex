<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2" android:minHeight="145dp" tools:layout_editor_absoluteY="81dp">

    <SurfaceView
            android:id="@+id/camera_preview"
            android:layout_width="395dp"
            android:layout_height="679dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.47" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:text="Flash"
            android:layout_width="wrap_content"
            android:layout_height="85dp" android:id="@+id/flashToggle"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:elevation="0dp"
            android:baselineAligned="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.862"
            app:layout_constraintStart_toEndOf="@+id/camera_preview" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/camera_preview"
    />

</android.support.constraint.ConstraintLayout>